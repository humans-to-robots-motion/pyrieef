<?xml version="1.0"?>
<robot name="flexible">

  <link name="base">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0."/>
      <inertia ixx="1." ixy="0." ixz="0." iyy="1." iyz="0." izz="1."/>
    </inertial>
  </link>

<link name="link1">
  <visual>
    <geometry>
      <box size="1 .2 .1"/>
    </geometry>
    <origin rpy="0 0 0" xyz=".5 0 0"/>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>
  <inertial>
    <mass value="0."/>
    <inertia ixx="1." ixy="0." ixz="0." iyy="1." iyz="0." izz="1."/>
  </inertial>
</link>

<link name="link2">
  <visual>
    <geometry>
      <box size="1 .2 .1"/>
    </geometry>
    <origin rpy="0 0 0" xyz=".5 0 0"/>
    <material name="blue">
      <color rgba="0 0 .8 1"/>
    </material>
  </visual>
  <inertial>
    <mass value="0."/>
    <inertia ixx="1." ixy="0." ixz="0." iyy="1." iyz="0." izz="1."/>
  </inertial>
</link>

<link name="end">
  <visual>
      <geometry>
        <box size=".15 .15 .1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
  </visual>
  <inertial>
    <mass value="0."/>
    <inertia ixx="1." ixy="0." ixz="0." iyy="1." iyz="0." izz="1."/>
  </inertial>
</link>

<joint name="base_to_link1" type="revolute">
  <axis xyz="0 0 1"/>
  <parent link="base"/>
  <child link="link1"/>
  <origin xyz="0 0 .1"/>
  <limit effort="15" lower="-3.15" upper="3.15" velocity="5"/>
</joint>


<joint name="link1_to_link2" type="revolute">
  <axis xyz="0 0 1"/>
  <parent link="link1"/>
  <child link="link2"/>
  <origin xyz="1 0 0"/>
  <limit effort="15" lower="-3.15" upper="3.15" velocity="5"/>
</joint>

<joint name="link2_to_end" type="revolute">
  <axis xyz="0 0 1"/>
  <parent link="link2"/>
  <child link="end"/>
  <origin xyz="1 0 0"/>
  <limit effort="15" lower="-3.15" upper="3.15" velocity="5"/>
</joint>

</robot>
